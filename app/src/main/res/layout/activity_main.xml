<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Courses"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="#59a65a"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_margin="10dp">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="onCardClicked"
            android:id="@+id/card489">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:srcCompat="@drawable/cover1"
                android:scaleType="centerCrop" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn489"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CSE 489"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsbold"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    style="?attr/borderlessButtonStyle"
                    android:padding="1dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Mobile Application Development"
                    android:fontFamily="@font/poppinsmedium"
                    android:padding="2dp"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="#808080"
                    />
            </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:id="@+id/card479">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:srcCompat="@drawable/cover1"
                    android:scaleType="centerCrop" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn479"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CSE 479"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/black"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        style="?attr/borderlessButtonStyle"
                        android:padding="1dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:text="Web Programming"
                        android:fontFamily="@font/poppinsmedium"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="#808080"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:id="@+id/card477">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:srcCompat="@drawable/cover1"
                    android:scaleType="centerCrop" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn477"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CSE 477"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsbold"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        style="?attr/borderlessButtonStyle"
                        android:padding="1dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Data Mining"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="#808080"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:id="@+id/card495">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:srcCompat="@drawable/cover1"
                    android:scaleType="centerCrop" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn495"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CSE 495"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/black"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        style="?attr/borderlessButtonStyle"
                        android:padding="1dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="IT Project management"
                        android:fontFamily="@font/poppinsmedium"
                        android:padding="2dp"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="#808080"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#59a65a">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:fontFamily="@font/poppinsbold"
            android:backgroundTint="#59a65a"
            android:textColor="#fafcfa"
            android:textStyle="bold"
            android:textSize="24sp"
            android:padding="8dp">

        </Button>
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

        </TextView>
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add"
            android:fontFamily="@font/poppinsbold"
            android:backgroundTint="#59a65a"
            android:textColor="#fafcfa"
            android:textStyle="bold"
            android:textSize="24sp"
            android:padding="8dp">

        </Button>

    </LinearLayout>
</LinearLayout>
